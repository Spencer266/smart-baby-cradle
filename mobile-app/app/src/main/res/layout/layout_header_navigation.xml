<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#9932CC"
    android:padding="20dp"
    android:gravity="bottom"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/MainActivity_NavigationView_userAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cradle_icon"/>

    <TextView
        android:id="@+id/MainActivity_NavigationView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/MainActivity_NavigationView_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User@gmail.com"
        android:textSize="14sp"
        android:textColor="@color/white"
        />
</LinearLayout>